<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>StartSessionServlet</servlet-name>
        <servlet-class>za.ac.tut.web.StartSessionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IdentificationServlet</servlet-name>
        <servlet-class>za.ac.tut.web.IdentificationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddIdentificationServlet</servlet-name>
        <servlet-class>za.ac.tut.web.AddIdentificationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EndSessionServlet</servlet-name>
        <servlet-class>za.ac.tut.web.EndSessionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetAllIdServlet</servlet-name>
        <servlet-class>za.ac.tut.web.GetAllIdServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetTotalIdServlet</servlet-name>
        <servlet-class>za.ac.tut.web.GetTotalIdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StartSessionServlet</servlet-name>
        <url-pattern>/StartSessionServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IdentificationServlet</servlet-name>
        <url-pattern>/IdentificationServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddIdentificationServlet</servlet-name>
        <url-pattern>/AddIdentificationServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EndSessionServlet</servlet-name>
        <url-pattern>/EndSessionServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetAllIdServlet</servlet-name>
        <url-pattern>/GetAllIdServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetTotalIdServlet</servlet-name>
        <url-pattern>/GetTotalIdServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <context-param>
        <param-name>computer_name</param-name>
        <param-value>Siri</param-value>
    </context-param>
    
</web-app>
